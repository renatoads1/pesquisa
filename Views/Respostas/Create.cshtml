@model pesquisa.Models.ViewModels.RespostaFormViewModel;

@{
    ViewData["Title"] = "Create";
}

<h1>Create</h1>

<h4>Resposta</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Create">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label class="control-label"></label>
                    <select asp-for="resposta.Id" class="form-control" asp-items="@(new SelectList(Model.Perguntas,"Id","PerguntaSimpl"))">
                    </select>
                <span class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="resposta.RespostaSimpl" class="control-label"></label>
                <input asp-for="resposta.RespostaSimpl" class="form-control" />
                <span asp-validation-for="resposta.RespostaSimpl" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="resposta.RespostaCompleta" class="control-label"></label>
                <input asp-for="resposta.RespostaCompleta" class="form-control" />
                <span asp-validation-for="resposta.RespostaCompleta" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Create" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="Index">Back to List</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
